<UserControl x:Class="ExamSystem.CustomControl.TabItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ExamSystem.CustomControl"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Name="columnLabel" Width="*"></ColumnDefinition>
            <ColumnDefinition Name="columnCloseButton" Width="20"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Label Name="lblTitle" Grid.Column="0" />
        <Button Name="btnClose" Content="X" Background="AliceBlue" Grid.Column="1" FontFamily="Courier" FontWeight="Bold"  Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"/>

    </Grid>
</UserControl>
