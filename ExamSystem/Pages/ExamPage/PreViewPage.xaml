<Page x:Class="ExamSystem.Pages.ExamPage.PreViewPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ExamSystem.Pages.ExamPage"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PreViewPage">

    <Grid>
        <ListView x:Name="listView" Grid.Row="1"   >
            <ListView.View>
                <GridView>
                    <GridViewColumn  Header="选择题数量" Width="100" DisplayMemberBinding="{Binding choiceCount}" ></GridViewColumn>
                    <GridViewColumn  Header="填空题数量" Width="100" DisplayMemberBinding="{Binding comrletionCount}"></GridViewColumn>
                    <GridViewColumn  Header="问答题数量" Width="100" DisplayMemberBinding="{Binding saQuestionCount}"></GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>
